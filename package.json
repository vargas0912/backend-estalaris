{
  "name": "api-backend",
  "version": "1.0.0",
  "description": "Sistema de administracion de mercancias Estelaris",
  "main": "index.js",
  "scripts": {
    "start": "node ./app.js",
    "dev": "nodemon ./app.js",
    "lint": "eslint --ignore-path .gitignore . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test jest --verbose --silent",
    "pretest": "NODE_ENV=test npm run db:reset",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all --seeders-path ./src/database/seeders/test",
    "db:create:test": "NODE_ENV=test npx sequelize-cli db:create",
    "prepare": "husky install"
  },
  "author": "GVV",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-validator": "7.0.1",
    "jsonwebtoken": "9.0.2",
    "multer": "1.4.5-lts.1",
    "mysql2": "3.6.2",
    "sequelize": "6.33.0"
  },
  "devDependencies": {
    "husky": "8.0.0",
    "jest": "29.7.0",
    "lint-staged": "15.0.1",
    "nodemon": "3.0.1",
    "sequelize-cli": "6.6.1",
    "standard": "17.1.0",
    "supertest": "6.3.3"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json"
  },
  "jest": {
    "testEnvironment": "node",
    "globalTeardown": "./kill-process.js"
  },
  "lint-staged": {
    "*.(js)": "npm run lint:fix"
  }
}
